<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/bg_item_card"
        android:elevation="4dp">

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Thông tin sản phẩm -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- Giá sản phẩm -->
            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:layout_marginTop="4dp"/>

            <!-- Danh mục -->
            <TextView
                android:id="@+id/item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh Mục"
                android:textSize="12sp"
                android:textColor="#777777"
                android:layout_marginTop="2dp"/>

            <!-- Rating -->
            <TextView
                android:id="@+id/item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xếp Hạng"
                android:textSize="12sp"
                android:textColor="#777777"
                android:layout_marginTop="2dp"/>

            <!-- 2 nút icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <!-- Xem chi tiết -->
                <ImageView
                    android:id="@+id/btn_view_detail"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_view_detail"
                    android:contentDescription="Xem chi tiết"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <!-- Thêm vào giỏ hàng -->
                <ImageView
                    android:id="@+id/btn_add_cart"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="12dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_add_cart"
                    android:contentDescription="Thêm vào giỏ hàng"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
