<?xml version="1.0" encoding="utf-8"?>
<!--
  tab_indicator.xml
  Đây là drawable để hiển thị đường gạch hoặc nền cho tab khi được chọn.
  Bạn có thể gán vào TabLayout bằng:
  app:tabIndicator="@drawable/tab_indicator"
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu của đường gạch hoặc nền tab khi được chọn -->
    <solid android:color="#FF6200EE" /> <!-- tím đậm, bạn có thể đổi -->

    <!-- Độ cao của thanh indicator -->
    <size android:height="3dp" />

    <!-- Bo tròn nếu muốn -->
    <corners android:radius="2dp" />
</shape>
